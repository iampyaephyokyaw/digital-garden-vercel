.navbar {
  background-color: #f0f0f0; /* Adjust to your preference */
  padding: 1rem 0; /* Adjust padding as needed */
}

.navbar-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1200px; /* Adjust max-width as needed */
  margin: 0 auto;
  padding: 0 1rem; /* Add padding to the container */
}

.navbar-title {
  font-size: 1.5rem; /* Adjust font size as needed */
  text-decoration: none;
  color: #333; /* Adjust color as needed */
}

.navbar-links {
  list-style: none;
  display: flex;
  margin: 0;
  padding: 0;
}

.navbar-links li {
  margin-left: 1.5rem; /* Adjust spacing between links */
}

.navbar-links a {
  text-decoration: none;
  color: #333; /* Adjust color as needed */
}

.navbar-links a:hover {
  text-decoration: underline;
}
